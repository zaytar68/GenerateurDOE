{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Error",
        "Microsoft.EntityFrameworkCore.Infrastructure": "Error",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "GenerateurDOE": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/app/Logs/app-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 2097152,
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "shared": true,
          "flushToDiskInterval": "00:00:01"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName"
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=GenerateurDOE_Prod;Username=generateur_user;Password=GenerateurDOE2025!;SSL Mode=Prefer;Trust Server Certificate=true;Command Timeout=300;"
  },
  "AppSettings": {
    "ApplicationVersion": "2.1.3",
    "RepertoireStockagePDF": "/app/Documents/PDF",
    "RepertoireStockageImages": "/app/Documents/Images",
    "NomSociete": "Multisols",
    "TailleMaxFichierPDF": "50MB",
    "StylesPDF": {
      "FontSizeScale": 0.8,
      "TitleColor": "#2c3e50",
      "SubtitleColor": "#2980b9",
      "TextColor": "#333333",
      "BorderColor": "#3498db",
      "LineHeight": 1.6,
      "TemplatePredefini": "Normal"
    }
  },
  "DatabaseProvider": "PostgreSQL",
  "Npgsql": {
    "EnableLegacyTimestampBehavior": true,
    "EnableParameterLogging": false,
    "CommandTimeout": 300
  }
}