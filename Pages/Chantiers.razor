    /// <summary>
    /// Supprime un chantier avec pr√©visualisation avanc√©e de l'impact
    /// Utilise le DeletionService robuste avec validation, gestion des fichiers et audit
    /// </summary>
    private async Task DeleteChantier(int chantierId)
    {
        try
        {
            // 1. Obtenir l'impact de la suppression
            var impact = await deletionService.GetChantierDeletionImpactAsync(chantierId);

            // 2. Construire le message de confirmation d√©taill√©
            var confirmationMessage = $"√ätes-vous s√ªr de vouloir supprimer ce chantier ?\n\n" +
                                    $"‚ö†Ô∏è IMPACT DE LA SUPPRESSION :\n" +
                                    $"‚Ä¢ {impact.DocumentsCount} document(s) g√©n√©r√©(s)\n" +
                                    $"‚Ä¢ {impact.FichesTechniquesCount} fiche(s) technique(s)\n" +
                                    $"‚Ä¢ {impact.PdfFilesCount} fichier(s) PDF\n" +
                                    $"‚Ä¢ {impact.SectionsLibresCount} section(s) libre(s)\n" +
                                    $"‚Ä¢ {FormatFileSize(impact.TotalFileSize)} de donn√©es\n\n";

            if (impact.Warnings.Any())
            {
                confirmationMessage += $"üî∏ AVERTISSEMENTS :\n";
                foreach (var warning in impact.Warnings)
                {
                    confirmationMessage += $"‚Ä¢ {warning}\n";
                }
                confirmationMessage += "\n";
            }

            if (impact.AffectedItems.Any())
            {
                var displayItems = impact.AffectedItems.Take(5).ToList();
                confirmationMessage += $"üìã √âL√âMENTS CONCERN√âS :\n";
                foreach (var item in displayItems)
                {
                    confirmationMessage += $"‚Ä¢ {item}\n";
                }
                if (impact.AffectedItems.Count > 5)
                {
                    confirmationMessage += $"‚Ä¢ ... et {impact.AffectedItems.Count - 5} autre(s)\n";
                }
            }

            confirmationMessage += "\n‚ùå Cette action est IRR√âVERSIBLE !";

            // 3. Confirmation avec d√©tails
            var confirmResult = await DialogService.Confirm(
                confirmationMessage,
                "‚ö†Ô∏è SUPPRESSION D√âFINITIVE",
                new Radzen.ConfirmOptions {
                    OkButtonText = "üóëÔ∏è SUPPRIMER D√âFINITIVEMENT",
                    CancelButtonText = "‚ùå Annuler",
                    Width = "600px",
                    Height = "500px"
                });

            if (confirmResult == true)
            {
                // 4. Notification de d√©but d'op√©ration
                NotificationService.Notify(Radzen.NotificationSeverity.Info, "Suppression en cours...",
                    $"Suppression de {impact.DocumentsCount} document(s) et {impact.PdfFilesCount} fichier(s)...");

                // 5. Suppression avec options d'audit
                var options = new DeletionOptions
                {
                    DeletePhysicalFiles = true,
                    EnableAuditLogging = true,
                    InitiatedBy = "Interface Chantiers",
                    Reason = "Suppression manuelle via interface utilisateur"
                };

                var result = await deletionService.DeleteChantierAsync(chantierId, options);

                if (result.Success)
                {
                    // 6. Mise √† jour de l'interface
                    await RefreshChantiers();

                    // 7. Notification de succ√®s d√©taill√©e
                    var successMessage = $"Chantier supprim√© avec succ√®s !\n" +
                                       $"‚Ä¢ {result.FilesDeleted} fichier(s) supprim√©(s)\n" +
                                       $"‚Ä¢ {result.RecordsDeleted} enregistrement(s) supprim√©(s)\n" +
                                       $"‚Ä¢ Dur√©e: {result.Duration.TotalSeconds:F2}s";

                    NotificationService.Notify(Radzen.NotificationSeverity.Success, "‚úÖ Suppression R√©ussie", successMessage);
                }
                else
                {
                    // 8. Gestion des erreurs avec d√©tails
                    var errorMessage = "√âchec de la suppression :\n" + string.Join("\n", result.Messages);
                    NotificationService.Notify(Radzen.NotificationSeverity.Error, "‚ùå Erreur de Suppression", errorMessage);

                    if (result.Exception != null)
                    {
                        Console.WriteLine($"[DEBUG] Deletion error: {result.Exception.Message}");
                    }
                }
            }
        }
        catch (Exception ex)
        {
            // 9. Gestion d'erreur globale
            var errorMsg = $"Erreur inattendue lors de la suppression: {ex.Message}";
            NotificationService.Notify(Radzen.NotificationSeverity.Error, "‚ùå Erreur Critique", errorMsg);
            Console.WriteLine($"[ERROR] DeleteChantier exception: {ex}");
        }
    }



