        var result = await DialogService.Confirm(
            $"√ätes-vous s√ªr de vouloir supprimer le document '{document.NomFichier}' ?",
            "Confirmation de suppression",
            new Radzen.ConfirmOptions { OkButtonText = "Supprimer", CancelButtonText = "Annuler" });

        if (result == true)
        {
            try
            {
                await documentGenereService.DeleteDocumentGenereAsync(document.Id);

                // ‚ö° INVALIDATION CACHE : Force rafra√Æchissement imm√©diat de l'affichage
                documentRepositoryService.InvalidateChantierCache(ChantierId);

                NotificationService.Notify(Radzen.NotificationSeverity.Success, "Succ√®s", "Document supprim√©");
                ForceRefreshPage(); // Recharger la liste
            }
            catch (Exception ex)
            {
