</div>

@code {
    [Parameter] public int ChantierId { get; set; }
    
    private Chantier? chantier;
    private List<DocumentGenere> documentsGeneres = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await ChargerChantier();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (ChantierId > 0)
        {
            await ChargerChantier();
        }
    }

    private async Task ChargerChantier()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            chantier = await chantierService.GetByIdAsync(ChantierId);
            if (chantier != null)
            {
                documentsGeneres = (await documentGenereService.GetDocumentsGeneresByChantierId(ChantierId)).ToList();
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(Radzen.NotificationSeverity.Error, "Erreur", 
                $"Erreur lors du chargement du chantier: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void RetourListeChantiers()
    {
        Navigation.NavigateTo("/chantiers");
    }

    private async Task ArchiverChantier()
    {
        if (chantier == null) return;

        try
        {
            if (chantier.EstArchive)
            {
                await chantierService.UnarchiveAsync(chantier.Id);
                NotificationService.Notify(Radzen.NotificationSeverity.Success, "Succ√®s", "Chantier d√©sarchiv√©");
            }
            else
            {
                await chantierService.ArchiveAsync(chantier.Id);
                NotificationService.Notify(Radzen.NotificationSeverity.Success, "Succ√®s", "Chantier archiv√©");
            }
            
            await ChargerChantier(); // Recharger pour mettre √† jour l'√©tat
        }
        catch (Exception ex)
        {
            NotificationService.Notify(Radzen.NotificationSeverity.Error, "Erreur", ex.Message);
        }
    }

    private void ModifierChantier()
    {
        // TODO: Impl√©menter la modification du chantier (dialogue modal)
        NotificationService.Notify(Radzen.NotificationSeverity.Info, "√Ä venir", "Fonctionnalit√© en cours de d√©veloppement");
    }

    private async Task SupprimerChantier()
    {
        if (chantier == null) return;

        var result = await DialogService.Confirm(
            $"√ätes-vous s√ªr de vouloir supprimer le chantier '{chantier.NomProjet}' ?",
            "Confirmation de suppression",
            new Radzen.ConfirmOptions { OkButtonText = "Supprimer", CancelButtonText = "Annuler" });

        if (result == true)
        {
            try
            {
                await chantierService.DeleteAsync(chantier.Id);
                NotificationService.Notify(Radzen.NotificationSeverity.Success, "Succ√®s", "Chantier supprim√©");
                Navigation.NavigateTo("/chantiers");
            }
            catch (Exception ex)
            {
                NotificationService.Notify(Radzen.NotificationSeverity.Error, "Erreur", ex.Message);
            }
        }
    }

    // M√©thodes pour la gestion des documents
    private void NouveauDocument()
    {
        Navigation.NavigateTo($"/document/edit/nouveau/{ChantierId}");
    }

    private async Task TelechargerDocument(DocumentGenere document)
    {
        try
        {
            // G√©n√©rer le document s'il n'existe pas encore
            if (string.IsNullOrEmpty(document.CheminFichier) || !File.Exists(document.CheminFichier))
            {
                var contenu = await documentGenereService.ExportDocumentAsync(
                    document.Id, 
                    document.FormatExport);
                
                NotificationService.Notify(Radzen.NotificationSeverity.Success, "G√©n√©ration", "Document g√©n√©r√© avec succ√®s");
            }
            
            // Pour l'instant, on simule le t√©l√©chargement
            NotificationService.Notify(Radzen.NotificationSeverity.Info, "T√©l√©chargement", $"T√©l√©chargement de {document.NomFichier} simul√©");
        }
        catch (Exception ex)
        {
            NotificationService.Notify(Radzen.NotificationSeverity.Error, "Erreur", $"Erreur lors de la g√©n√©ration: {ex.Message}");
        }
    }

    private async Task DupliquerDocument(DocumentGenere document)
    {
        var result = await DialogService.Confirm(
            $"Voulez-vous dupliquer le document '{document.NomFichier}' ?",
            "Confirmation de duplication",
            new Radzen.ConfirmOptions { OkButtonText = "Dupliquer", CancelButtonText = "Annuler" });

        if (result == true)
        {
            try
            {
                var nouveauNom = $"{document.NomFichier}_Copie_{DateTime.Now:yyyyMMdd_HHmm}";
                await documentGenereService.DuplicateAsync(document.Id, nouveauNom);
                NotificationService.Notify(Radzen.NotificationSeverity.Success, "Succ√®s", "Document dupliqu√© avec succ√®s");
                await ChargerChantier(); // Recharger la liste
            }
            catch (Exception ex)
            {
                NotificationService.Notify(Radzen.NotificationSeverity.Error, "Erreur", $"Erreur lors de la duplication: {ex.Message}");
            }
        }
    }

    private void ModifierDocument(DocumentGenere document)
    {
        Navigation.NavigateTo($"/document/edit/{document.Id}");
    }

    private void EditerContenuDocument(DocumentGenere document)
    {
        // Navigation vers l'onglet sections pour √©diter le contenu
        Navigation.NavigateTo($"/document/edit/{document.Id}#sections");
    }

    private async Task SupprimerDocument(DocumentGenere document)
    {
        var result = await DialogService.Confirm(
            $"√ätes-vous s√ªr de vouloir supprimer le document '{document.NomFichier}' ?",
            "Confirmation de suppression",
            new Radzen.ConfirmOptions { OkButtonText = "Supprimer", CancelButtonText = "Annuler" });

        if (result == true)
        {
            try
            {
                await documentGenereService.DeleteDocumentGenereAsync(document.Id);
                NotificationService.Notify(Radzen.NotificationSeverity.Success, "Succ√®s", "Document supprim√©");
                await ChargerChantier(); // Recharger la liste
            }
            catch (Exception ex)
            {
                NotificationService.Notify(Radzen.NotificationSeverity.Error, "Erreur", ex.Message);
            }
        }
    }

    // M√©thodes utilitaires pour l'affichage
    private string GetTypeBadgeColor(TypeDocumentGenere type)
    {
        return type switch
        {
            TypeDocumentGenere.DOE => "primary",
            TypeDocumentGenere.DossierTechnique => "info",
            TypeDocumentGenere.MemoireTechnique => "warning",
            _ => "secondary"
        };
    }

    private string GetTypeDisplayName(TypeDocumentGenere type)
    {
        return type switch
        {
            TypeDocumentGenere.DOE => "DOE",
            TypeDocumentGenere.DossierTechnique => "Dossier Technique",
            TypeDocumentGenere.MemoireTechnique => "M√©moire Technique",
            _ => type.ToString()
        };
    }
}