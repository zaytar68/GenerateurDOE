@* Composant modal réutilisable pour l'ajout d'un nouveau fabricant *@

<!-- Modal Nouveau Fabricant -->
<div class="modal fade @(IsVisible ? "show d-block" : "")" tabindex="-1" style="@(IsVisible ? "background: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nouveau Fabricant</h5>
                <button type="button" class="btn-close" @onclick="Fermer"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Nom du fabricant *</label>
                    <input type="text" class="form-control" @bind="fabricantNom" placeholder="Saisir le nom du fabricant" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Fermer">Annuler</button>
                <button type="button" class="btn btn-primary" @onclick="Ajouter" disabled="@(string.IsNullOrWhiteSpace(fabricantNom))">
                    Ajouter
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    /// <summary>
    /// Indique si la modal est visible
    /// </summary>
    [Parameter]
    public bool IsVisible { get; set; }

    /// <summary>
    /// Callback appelé lorsqu'un nouveau fabricant est créé
    /// Retourne le nom du fabricant
    /// </summary>
    [Parameter]
    public EventCallback<string> OnFabricantCreated { get; set; }

    /// <summary>
    /// Callback appelé lorsque la modal est fermée
    /// </summary>
    [Parameter]
    public EventCallback OnClosed { get; set; }

    private string fabricantNom = string.Empty;

    /// <summary>
    /// Ajoute le nouveau fabricant et notifie le parent
    /// </summary>
    private async Task Ajouter()
    {
        if (!string.IsNullOrWhiteSpace(fabricantNom))
        {
            await OnFabricantCreated.InvokeAsync(fabricantNom);
            fabricantNom = string.Empty;
        }
    }

    /// <summary>
    /// Ferme la modal et réinitialise le formulaire
    /// </summary>
    private async Task Fermer()
    {
        fabricantNom = string.Empty;
        await OnClosed.InvokeAsync();
    }
}
