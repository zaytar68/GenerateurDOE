@inherits LayoutComponentBase
@using GenerateurDOE.Models
@using Microsoft.Extensions.Options
@inject IOptions<AppSettings> AppSettingsOptions

<PageTitle>GenerateurDOE</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <span class="app-title">GenerateurDOE pour @AppSettingsOptions.Value.NomSociete - @AppSettingsOptions.Value.ApplicationVersion</span>
        </div>

        <article class="content px-4 main-content">
            @Body
        </article>
    </main>
</div>